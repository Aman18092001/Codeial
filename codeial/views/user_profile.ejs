<link rel="stylesheet" href="/css/user_profile.css">
<h1>
    Codeial/<%=title%>
</h1>
<img src="<%=user.avatar%>" alt="<%=user.name%>" width="300" height="350">
 

<%if(user.id==profile_user.id){%>
    <!-- <if user matches then show the forms> -->
    <form action="/users/update/<%=profile_user.id%>" enctype="multipart/form-data" method="POST">
        <input type="text" name="name" placeholder="ur name" value="<%=profile_user.name%>" required>
        <input type="email" name="email" placeholder="ur email" value="<%=profile_user.email %>" required>
        <input type="file" name="avatar" placeholder="profile picture">
        <input type="submit" value="Update">

    </form>    

<%}else{%>
    <p><%=profile_user.name%></p>
    <p><%=profile_user.email%></p>
<%}%>    